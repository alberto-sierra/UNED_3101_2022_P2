@model _3101_proyecto1.Models.EspecialistumViewModel

@{
    ViewData["Title"] = "Gesti√≥n de Especialistas";
}

<h1>Modificar Especialista</h1>
<h4>@Html.ValueFor(Model => Model.Nombre)</h4>
@if (ViewBag.mensaje != null)
{
    <h4 class="danger">@ViewBag.mensaje</h4>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Identificacion" class="control-label"></label>
                <input asp-for="Identificacion" class="form-control" readonly />
                <span asp-validation-for="Identificacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioConsulta" class="control-label"></label>
                <input asp-for="PrecioConsulta" class="form-control" />
                <span asp-validation-for="PrecioConsulta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreEspecialidad" class="control-label"></label>
                <select asp-for="IdEspecialidad" class="form-control" asp-items="@Model.ListaEspecialidad">
                </select>
                <span asp-validation-for="IdEspecialidad" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
