@model Backend.Models.ReservaConsultorioViewModel

@{
    ViewData["Title"] = "Reserva de Consultorios";
}

<h2>Reserva de Consultorio - Paso 4</h2>
@if (ViewBag.mensaje != null)
{
    <h4 class="danger">@ViewBag.mensaje</h4>
}
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroConsultorio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroConsultorio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DiaSemana)
        </dt>
        <dd class="col-sm-10">
            @{
                var nombreDia = "";
                switch (Model.DiaSemana)
                {
                    case 0:
                        nombreDia = "Lunes";
                        break;
                    case 1:
                        nombreDia = "Martes";
                        break;
                    case 2:
                        nombreDia = "Mi√©rcoles";
                        break;
                    case 3:
                        nombreDia = "Jueves";
                        break;
                    case 4:
                        nombreDia = "Viernes";
                        break;
                    default:
                        break;
                }
            }
            @nombreDia;
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HoraInicio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoraInicio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreEspecialista)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreEspecialista)
        </dd>
    </dl>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdConsultorio" />
            <input type="hidden" asp-for="DiaSemana" />
            <input type="hidden" asp-for="NumeroConsultorio" />
            <input type="hidden" asp-for="HoraInicio" />
            <input type="hidden" asp-for="IdEspecialista" />
            <div class="form-group">
                <label asp-for="IdEquipo" class="control-label"></label>
                <select asp-for="IdEquipo" class="form-control" asp-items="@Model.ListaItems">
                    <option value="">Seleccione el equipo</option>
                </select>
                <span asp-validation-for="IdEquipo" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Cancelar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
