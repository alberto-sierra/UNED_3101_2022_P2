@model _3101_proyecto1.Models.ReservaConsultorioViewModel

@{
    ViewData["Title"] = "Gestión de Consultorios";
}

<h1>Eliminar reserva</h1>
@if (ViewBag.mensaje != null)
{
    <h4 class="danger">@ViewBag.mensaje</h4>
}
<h3>Confirmación</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroConsultorio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroConsultorio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HoraInicio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoraInicio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreEspecialista)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreEspecialista)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar</a>
    </form>
</div>
