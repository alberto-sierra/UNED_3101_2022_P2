@model IEnumerable<Backend.Models.ReservaConsultorioViewModel>

@{
    ViewData["Title"] = "Reserva de Consultorios";
}

<h1>Reserva de Consultorios</h1>
@if (ViewBag.mensaje != null)
{
    <div class="text-danger"><h5>@ViewBag.mensaje</h5></div>
}
<p>
    <a asp-action="Create">Nueva Reserva</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DiaSemana)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoraInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroConsultorio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreEspecialista)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @{
                        var nombreDia = "";
                        switch (item.DiaSemana)
                        {
                            case 1:
                                nombreDia = "Lunes";
                                break;
                            case 2:
                                nombreDia = "Martes";
                                break;
                            case 3:
                                nombreDia = "Mi√©rcoles";
                                break;
                            case 4:
                                nombreDia = "Jueves";
                                break;
                            case 5:
                                nombreDia = "Viernes";
                                break;
                            default:
                                break;
                        }
                    }
                    @nombreDia
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoraInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroConsultorio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreEspecialista)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Ver detalle</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
