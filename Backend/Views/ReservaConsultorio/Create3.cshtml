@model _3101_proyecto1.Models.ReservaConsultorioViewModel

@{
    ViewData["Title"] = "Reserva de Consultorios";
}

<h2>Reserva de Consultorio - Paso 3</h2>
@if (ViewBag.mensaje != null)
{
    <h4 class="danger">@ViewBag.mensaje</h4>
}
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroConsultorio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroConsultorio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HoraInicio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoraInicio)
        </dd>
    </dl>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdConsultorio" />
            <input type="hidden" asp-for="NumeroConsultorio" />
            <input type="hidden" asp-for="HoraInicio" />
            <div class="form-group">
                <label asp-for="IdEspecialista" class="control-label"></label>
                <select asp-for="IdEspecialista" class="form-control" asp-items="@Model.ListaItems">
                    <option value="">Seleccione el especialista</option>
                </select>
                <span asp-validation-for="IdEspecialista" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Siguiente" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Cancelar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
