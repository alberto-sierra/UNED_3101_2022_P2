@model _3101_proyecto1.FrontEnd.Models.CitumViewModel

@{
    ViewData["Title"] = "Nueva Cita";
}

<h2>Nueva Cita - Paso 3</h2>
@if (ViewBag.mensaje != null)
{
    <h4 class="danger">@ViewBag.mensaje</h4>
}
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HoraInicio)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoraInicio)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Especialidad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Especialidad)
        </dd>
    </dl>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdPaciente" />
            <input type="hidden" asp-for="Fecha" />
            <div class="form-group">
                <label asp-for="NombreEspecialista" class="control-label"></label>
                <select asp-for="IdReserva" class="form-control" asp-items="@Model.ListaItems">
                    <option value="">Seleccione el especialista</option>
                </select>
                <span asp-validation-for="IdReserva" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Confirmar cita" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Cancelar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

